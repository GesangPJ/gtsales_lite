// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Barang {
  id          Int      @id @default(autoincrement())
  nama_barang String
  harga_jual  Int
  harga_beli  Int
  stok        Int      @default(0)
  kategoriId  Int      @default(1)
  barcode     String?
  kadaluarsa  DateTime?
  status      String   @default("Aktif")
  keterangan  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // relasi
  kategori    Kategori @relation(fields: [kategoriId], references: [id])
  pembeliandetail  PembelianDetail[]
  transaksiDetails TransaksiDetail[]

}

// Tabel detail transaksi
model TransaksiDetail {
  id            Int        @id @default(autoincrement())
  transaksiId   Int
  produkId      Int
  jumlah        Int
  harga         Int
  total         Int        @default(0) // total = quantity * price

  // relasi
  transaksi     Transaksi  @relation(fields: [transaksiId], references: [id])
  barangs        Barang     @relation(fields: [produkId], references: [id])
}

// Tabel Transaksi (penjualan)
model Transaksi {
  id             Int              @id @default(autoincrement())
  kode           String           @unique
  status         String           @default("LUNAS")
  pelanggan      String?
  metode         String           @default("CASH")
  jumlahTotal    Int
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  transaksiDetails TransaksiDetail[]

}

// Tabel Pembelian
model Pembelian {
  id            Int       @id @default(autoincrement())
  kode          String    @unique
  status        String?   @default("LUNAS")
  biayakirim    Int?
  nama_vendor   String?
  jumlahtotalharga    Int

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // relasi
  pembeliandetail PembelianDetail[]

}

// Tabel Detail Pembelian
model PembelianDetail {
  id            Int      @id  @default(autoincrement())
  pembelianId   Int
  barangId      Int
  jumlah        Int
  hargabeli     Int
  total         Int

  // relasi
  pembelian     Pembelian @relation(fields: [pembelianId], references: [id])
  barangs       Barang    @relation(fields: [barangId], references: [id])

}

model Kategori {
  id        Int      @id @default(autoincrement())
  nama_kategori      String   @unique
  status    String   @default("AKTIF")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  barangs   Barang[]
}

// Tabel Pengaturan Toko
model Toko {
  id        Int      @id @default(autoincrement())
  nama      String
  email     String   @unique
  notelp    String?
  alamat    String?
  npwp      String?
  siup      String?
  ppn       Float    @default(0.11)

  updatedAt DateTime @updatedAt
}
